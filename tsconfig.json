{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node16",    // Search under node_modules for non-relative imports.
    "pretty": true,
    "sourceMap": true,
    "strict": true, // Enable strictest settings like strictNullChecks & noImplicitAny.
    "isolatedModules": true, // Disallow features that require cross-file information for emit.
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true, // Import non-ES modules as default imports.
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types/"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "docs",
  ]
}
