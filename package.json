{
  "name": "isotolanguage",
  "version": "1.0.0",
  "description": "light and fast module to convert iso country and languages codes into country names, there is no unnecessary stuff only the bare essentials",
  "scripts": {
    "swc-build:esm": "npx swc src -d lib/esm --config-file .swcrc",
    "swc-build:umd": "npx swc src -o lib/umd/ISOToLanguage.js --config-file .swcrc-umd",
    "swc-build:cjs": "npx swc src -o lib/cjs/ISOToLanguage.js --config-file .swcrc-cjs",
    "build": "npm-run-all swc-build:*",
    "postbuild": "tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationDir ./lib/@types --skipLibCheck",
    "lint": "eslint ./src --fix",
    "test": "jest",
    "prepare": "husky install"
  },
  "license": "ISC",
  "types": "lib/@types",
  "exports": {
    ".": {
      "types": "./build/@types/index.d.ts",
      "umd": "./lib/umd/index.js",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "keywords": [
    "iso",
    "language",
    "country",
    "country code",
    "locale format",
    "IETF",
    "ISO 3166-1",
    "language tag"
  ],
  "files": [
    "lib/",
    "tests/",
    "docs/",
    "*.json",
    ".gitignore",
    ".eslintrc.js",
    "LICENSE",
    "README.md"
  ],
  "author": "Erik Golinelli <https://github.com/erikyo>",
  "repository": {
    "type": "git",
    "url": "https://github.com/erikyo/isotolanguage.git"
  },
  "bugs": {
    "url": "https://github.com/erikyo/isotolanguage/issues"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "tsc --build"
    ]
  }
}
